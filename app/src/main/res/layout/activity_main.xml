<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.cwi.moses.activities.MainActivity"
    android:background="@color/walmartCloud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/walmartCloud"
        android:layout_margin="@dimen/frmMarginDefault"
        android:padding="@dimen/frmMarginDefault">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/HomeOptionCard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_go_to_chat"
                android:layout_gravity="center"
                android:textColor="@color/textColorPrimary"
                android:onClick="goToChat"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/HomeOptionCard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_tickets_list"
                android:textColor="@color/textColorPrimary"
                android:layout_gravity="center"
                android:onClick="goToTicket"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/lblLogout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/lbl_logout"/>
    </LinearLayout>
</LinearLayout>
